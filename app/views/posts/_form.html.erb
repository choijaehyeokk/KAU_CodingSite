<% @post.tags.build %>
<%= form_with(model: post, local: true) do |post_form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= post_form.label :title %>
    <%= post_form.text_field :title %>
  </div>

  <div class="field">
    <%= post_form.label :body %>
    <%= post_form.text_area :body %>
  </div>

  <div class="field">
    <%= post_form.label :writer %>
    <%= post_form.text_field :writer %>
  </div>

  <div class="field">
    <%= post_form.label :like %>
    <%= post_form.number_field :like %>
  </div>

  <div class="field">
    <%= post_form.label :targetLanguage %>
    <%= post_form.text_field :targetLanguage %>
  </div>
  <h2>Tags</h2>
  <%= render :partial => 'tags/form', :locals => {:form => post_form} %>
  <div class="actions">
    <%= post_form.submit %>
  </div>
<% end %>