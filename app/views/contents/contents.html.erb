<!doctype html>
<html>
    <head>
        <%= stylesheet_link_tag "contents"%>
    </head>
    <body>
        <div class="d-flex">
            <img width="100" height="100" class="p-3" src="<%=asset_path @lang_extension[@CONTENTS_INDEX]+"_logo.png"%>"/>
            <h1 class="align-self-center mr-auto"><%=@CONTENTS_NAME%></h1>
            <form class="input-group w-25 my-0 my-auto">
                <div class="input-group-prepend ">
                    <div class="input-group-text bg-white border-right-0">
                        <i class="fas fa-search text-primary" aria-hidden="true"></i>
                    </div>
                </div>
                <input class="search form-control border-left-0 my-0 my-auto pl-n3" type="search" placeholder=<%="Search-in-"+@CONTENTS_NAME%>>
            </form>
            <button class="ml-3 mr-3 btn btn-default align-self-center bg-primary text-white">글쓰기</button>
        </div>
        <div class="jumbotron jumbotron-fluid" id="descriptor">
            <p class="display-4 text-dark text-center">다양한 게시글에서 원하시는 정보를 찾아보세요.</p>
        </div>
        <ul class="nav nav-tabs mx-1" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="code-tab" data-toggle="tab" href="#code" role="tab" aria-controls="code" aria-selected="true">코드질문</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="study-tab" data-toggle="tab" href="#study" role="tab" aria-controls="study" aria-selected="false">공부방</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="question-tab" data-toggle="tab" href="#question" role="tab" aria-controls="question" aria-selected="false">Q&A</a>
            </li>
        </ul>
        <div class="tab-content" id="primaryTabContents">
            <div class="tab-pane fade show active container-fluid" id="code" role="tabpanel" aria-labelledby="code-tab">
                <div  class="row">
                    <div id="tags" class="col-3 m-0 m-auto overflow-auto" style="height: 1100px;">
                        <%@testTag = ["#tag","#tagEx","#tagExample","#isittag?","#hah!"]%>
                        <%for i in (0...100)%>
                            <button class="btn btn-sm btn-outline-primary m-2" style="box-shadow: none;" data-toggle="button" aria-pressed="false">
                                <%=@testTag[Random.rand(0...@testTag.length())]%>
                            </button>
                        <%end%>
                    </div>
                    <div class="col-9 border-left">
                        <div class="row row-cols-1 justify-content-center w-100 m-0 m-auto">
                            <% for i in (0...5)%>
                                <a class="col card m-2 border-primary" href="#" >
                                    <div class="row no-gutters">
                                        <div class="col-2 m-0 m-auto">
                                            <div id="like" class="border border-primary rounded text-primary text-center w-75 mx-0 mx-auto mb-4"><%=Random.rand(0...10)%><br><span>like</span></div>
                                            <div id="answer-num" class="border border-primary rounded text-primary text-center w-75 mx-0 mx-auto mt-4"><%=Random.rand(0...10)%><br><span>answer</span></div>
                                        </div>
                                        <div id="post-content" class="col-10 card-body my-0 my-auto">
                                            <div class="d-flex justify-content-between" >
                                                <h5 id="post-title" class="card-title text-primary">title</h5>
                                                <div id="post-user-info" class="text-primary">username</div>
                                            </div>
                                            <p id="post-primary" class="card-text text-primary"> [content]<br>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Diam sollicitudin tempor id eu.</p>
                                            <div id="tags" class="" >
                                                <% for i in (0...Random.rand(0...10)) %>
                                                    <button class="btn btn-sm btn-outline-primary">#tag</button>
                                                <% end %>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </a>
                            <% end %>
                        </div>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center mb-0 mt-4">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade container-fluid" id="study" role="tabpanel" aria-labelledby="study-tab">
                <div  class="row">
                    <div class="col-3 m-0 m-auto overflow-auto" style="height: 1100px;">
                        <%@testTag = ["#st_tag","#st_tagEx","#st_tagExample","#isitst_tag?","#st_hah!"]%>
                        <%for i in (0...100)%>
                            <button class="btn btn-sm btn-outline-primary m-2" style="box-shadow: none;" data-toggle="button" aria-pressed="false">
                                <%=@testTag[Random.rand(0...@testTag.length())]%>
                            </button>
                        <%end%>
                    </div>
                    <div class="col-9 border-left">
                        <div class="row row-cols-1 justify-content-center w-100 contents m-0 m-auto">
                            <% @lang_name.each_with_index do |lang, i|%>
                                <a class="col card logo_img" href="<%="/contents/?index="+i.to_s%>" style="height: 12rem">
                                    <div class="card-body">
                                        <h5 class="card-title"><%=lang%></h5>
                                    </div>
                                </a>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade container-fluid" id="question" role="tabpanel" aria-labelledby="question-tab">
                <div  class="row">
                    <div class="col-3 m-0 m-auto overflow-auto" style="height: 1100px;">
                        <%@testTag = ["#qu_tag","#qu_tagEx","#qu_tagExample","#isitqu_tag?","#qu_hah!"]%>
                        <%for i in (0...100)%>
                            <button class="btn btn-sm btn-outline-primary m-2" style="box-shadow: none;" data-toggle="button" aria-pressed="false">
                                <%=@testTag[Random.rand(0...@testTag.length())]%>
                            </button>
                        <%end%>
                    </div>
                    <div class="col-9 border-left">
                        <div class="row row-cols-1 justify-content-center w-100 contents m-0 m-auto">
                            <% @lang_name.each_with_index do |lang, i|%>
                                <a class="col card logo_img" href="<%="/contents/?index="+i.to_s%>" style="height: 12rem">
                                    <div class="card-body">
                                        <h5 class="card-title"><%=lang%></h5>
                                    </div>
                                </a>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
